{
  "name": "hide-my-history",
  "displayName": "Hide my history",
  "version": "0.0.1",
  "description": "Hide your browsing history",
  "author": "Edward Nguyen <edward@delimister.com>",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "test": "plasmo test"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.5.1",
    "@fortawesome/free-solid-svg-icons": "^6.5.1",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@reduxjs/toolkit": "^2.0.1",
    "autoprefixer": "^10.4.19",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "dayjs": "^1.11.10",
    "lucide-react": "^0.364.0",
    "plasmo": "^0.85.2",
    "postcss": "^8.4.38",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-redux": "^9.0.4",
    "react-router-dom": "^6.21.1",
    "redux": "^5.0.1",
    "redux-persist": "^6.0.0",
    "redux-persist-chrome-storage": "^1.0.8",
    "sass": "^1.69.6",
    "tailwind-merge": "^2.2.2",
    "tailwindcss": "^3.4.3",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.251",
    "@types/node": "20.9.0",
    "@types/react": "18.2.37",
    "@types/react-dom": "18.2.15",
    "prettier": "3.0.3",
    "typescript": "5.2.2"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "storage",
      "history",
      "webNavigation",
      "favicon",
      "tabs",
      "contextMenus",
      "activeTab"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "_favicon/*"
        ],
        "matches": [
          "<all_urls>"
        ],
        "extension_ids": [
          "*"
        ]
      }
    ]
  }
}
